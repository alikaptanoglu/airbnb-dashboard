<div class="login-page-container bg-gray">
    <div class="bg-pink pink-login-bg"></div>

    <div class="row login-form center">
        <div class="col-12 login-container">
            <div class="text-center">
                <img src="/images/home-symbol.png" />
                <h1 class="text-center"><span class="fa fa-sign-in"></span>Sign Up</h1>
                <!-- show any messages that come back with authentication -->
                {{#if message }}
                    <div class="alert alert-danger">{{ message }}</div>
                {{/if }}
            </div>

            <div class="form-container">
                <!-- LOGIN FORM -->
                <form class="text-center center" action="/signup" method="post">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" name="email">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="password">
                    </div>
                    <button type="submit" class="btn bg-pink">Sign Up</button>
                </form>
                <p>Already have an account? <a href="/">Login</a></p>
            </div>
        </div>
    </div>
</div>